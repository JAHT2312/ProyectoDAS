        padding: 15px;
    }

        .contenido-tienda h5 {
            margin-bottom: 5px;
            color: white;
        }

        .contenido-tienda p {
            margin: 0;
            font-size: 0.9rem;
            color: white;
        }

        .contenido-tienda .ir-icono {
            float: right;
            font-size: 1.4rem;
            color: #FFC107;
            cursor: pointer;
        }

            .contenido-tienda .ir-icono:hover {
                color: #ffdd57;
            }
</style>

