<style>

    .titulo-tiendas {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
        color: #003399;
    }

    .subtitulo-tiendas {
        text-align: left;
        font-size: 1.5rem;
        color: #ffffff;
        margin-bottom: 100px;
    }

    .contenedor-tiendas {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 30px;
        background-color: #ffffff;
    }

