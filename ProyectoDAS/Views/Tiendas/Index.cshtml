<style>
    .titulo-tiendas {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
        color: #003399;
    }

    .subtitulo-tiendas {
        text-align: center;
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 20px;
    }

    .contenedor-tiendas {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 30px;
        background-color: #FFC107;
    }

    .tarjeta-tienda {
        background-color: #003399;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        width: 300px;
        overflow: hidden;
        transition: transform 0.2s;
    }

        .tarjeta-tienda:hover {
            transform: scale(1.02);
        }

        .tarjeta-tienda img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .contenido-tienda {
        padding: 15px;
    }

        .contenido-tienda h5 {
            margin-bottom: 5px;
            color: white;
        }

        .contenido-tienda p {
            margin: 0;
            font-size: 0.9rem;
            color: white;
        }

        .contenido-tienda .ir-icono {
            float: right;
            font-size: 1.4rem;
            color: #FFC107;
            cursor: pointer;
        }

            .contenido-tienda .ir-icono:hover {
                color: #ffdd57;
            }
</style>

